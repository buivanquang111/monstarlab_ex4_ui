<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icons_8_expand_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewSkipTwo"
        android:layout_marginTop="19dp"
        android:layout_marginRight="39dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/lato_regular"
        android:text="Skip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewFllow"
        android:fontFamily="@font/raleway_black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="46dp"
        android:textSize="28sp"
        android:textColor="#3e3e3e"
        android:text="Follow our tips"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBack"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewSuccess"
        android:fontFamily="@font/raleway_black"
        android:layout_marginLeft="46dp"
        android:textSize="28sp"
        android:textColor="#3e3e3e"
        android:text="to achieve success!"
        app:layout_constraintTop_toBottomOf="@+id/textViewFllow"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:fontFamily="@font/lato_light"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="7.9dp"
        android:text="Ex totam praesentium incidunt aut."
        app:layout_constraintTop_toBottomOf="@+id/textViewSuccess"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/componente_4_1"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="11:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:src="@drawable/gruppo_di_maschere_3"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintBottom_toTopOf="@+id/g2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <TextView
            android:background="@drawable/border_onbarding"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textViewTab"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@+id/g2"
        app:layout_constraintLeft_toLeftOf="@+id/cardView"
        android:background="@drawable/shape_tab_onboarding_one"
        android:layout_width="38dp"
        android:layout_height="9dp"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/g2"
        app:layout_constraintLeft_toRightOf="@+id/textViewTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <TextView
            android:background="@drawable/border_onbarding"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnGoToFragmentThree"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_text_onboarding"
        android:fontFamily="@font/lato_black"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="NEXT"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>