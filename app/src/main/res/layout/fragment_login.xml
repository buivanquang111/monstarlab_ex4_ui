<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g4"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/illustration"
        app:layout_constraintTop_toTopOf="@+id/g1"
        app:layout_constraintBottom_toTopOf="@+id/g2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:src="@drawable/componente_7_1"
        app:layout_constraintTop_toBottomOf="@id/g3"
        app:layout_constraintBottom_toTopOf="@id/g4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewTradix"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/raleway_black"
        android:textSize="40sp"
        android:textColor="#2b2828"
        android:text="TRADIX"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/coin"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/g2"
        app:layout_constraintLeft_toRightOf="@+id/textViewTradix"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewTrading"
        android:fontFamily="@font/lato_light"
        android:textSize="22sp"
        android:textColor="#171717"
        android:text="The future of trading"
        app:layout_constraintTop_toBottomOf="@+id/textViewTradix"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewWelcome"
        android:fontFamily="@font/raleway_black"
        android:textSize="22sp"
        android:textColor="#656565"
        android:text="Welcome!"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/g4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editTextEmailLogin"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:background="@drawable/boder_edit_login"
        android:hint="E-mail"
        android:paddingLeft="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editTextPasswordLogin"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:background="@drawable/boder_edit_login"
        android:hint="Password"
        android:paddingLeft="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnLogin"
        android:background="@drawable/background_button_gradient"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:fontFamily="@font/lato_black"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordLogin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewForgotPassword"
        android:fontFamily="@font/lato_light"
        android:textSize="14sp"
        android:textColor="#9d9d9d"
        android:text="Forgot Password?"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lato_black"
        android:textSize="14sp"
        android:textColor="#9d9d9d"
        android:text="Sign Up"
        android:layout_marginRight="77dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>