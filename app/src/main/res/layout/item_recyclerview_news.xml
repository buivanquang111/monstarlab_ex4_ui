<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="21dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageViewItemNews"
        android:layout_width="102dp"
        android:layout_height="104dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMinusItemNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/raleway_medium"
        android:text="ALT -3.87%"
        android:textColor="#f00909"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewItemNews"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDateItemNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/lato_light"
        android:text="3 Sept 2020"
        android:textColor="#080808"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/textViewMinusItemNews"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNameItemNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway_black"
        android:text="ATLANTIA"
        android:textColor="#2e2e2e"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewItemNews"
        app:layout_constraintTop_toBottomOf="@+id/textViewMinusItemNews" />

    <TextView
        android:id="@+id/textViewDetailItemNews"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_light"
        android:maxLines="3"
        android:text="Illum velit nam voluptatum enim aut ratione ratione officiis totam. Mollitia eum sint tempora ducimus"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewItemNews"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameItemNews" />

    <ImageView
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/gruppo_di_maschere_1_clipped"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>