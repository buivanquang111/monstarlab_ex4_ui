<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/imageViewBackFragment"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/icons_8_expand_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/textViewSkipThree"
        android:layout_marginTop="49dp"
        android:layout_marginRight="39dp"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="Skip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="9dp"
        android:src="@drawable/componente_5_2"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintBottom_toTopOf="@+id/g2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginLeft="9dp"
        app:layout_constraintDimensionRatio="1.05:1"
        android:src="@drawable/gruppo_di_maschere_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintBottom_toTopOf="@+id/g2"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/textViewKeep"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="46dp"
        android:fontFamily="@font/raleway_black"
        android:textSize="28sp"
        android:textColor="#3e3e3e"
        android:text="Keep your"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewSafe"
        android:layout_marginLeft="46dp"
        android:fontFamily="@font/raleway_black"
        android:textSize="28sp"
        android:textColor="#3e3e3e"
        android:text="investment safe"
        app:layout_constraintTop_toBottomOf="@+id/textViewKeep"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewEx"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="46dp"
        android:fontFamily="@font/lato_light"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="Ex totam praesentium incidunt aut."
        app:layout_constraintTop_toBottomOf="@+id/textViewSafe"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOne"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <TextView
            android:background="@drawable/border_onbarding"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTwo"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/cardViewOne"
        app:layout_constraintTop_toBottomOf="@+id/textViewEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <TextView
            android:background="@drawable/border_onbarding"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="@+id/cardViewTwo"
        app:layout_constraintTop_toBottomOf="@+id/textViewEx"
        android:background="@drawable/shape_tab_onboarding_one"
        android:layout_width="38dp"
        android:layout_height="9dp"/>
    <Button
        android:id="@+id/btnStartLogin"
        android:background="@drawable/background_text_onboarding"
        android:text="START"
        android:fontFamily="@font/lato_black"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginRight="51dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEx"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>