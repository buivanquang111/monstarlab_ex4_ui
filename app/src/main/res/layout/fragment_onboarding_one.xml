<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewSkipOne"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toTopOf="@+id/g1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Skip"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/componente_5_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintBottom_toTopOf="@+id/g2"
        android:layout_marginLeft="33dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:layout_marginLeft="8.8dp"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/g2"
        android:src="@drawable/onboardingone_photo"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewStart"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/g2"
        android:textSize="28sp"
        android:textColor="#3e3e3e"
        android:fontFamily="@font/raleway_black"
        android:text="Start to invest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewFuture"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart"
        android:textSize="28sp"
        android:textColor="#3e3e3e"
        android:fontFamily="@font/raleway_black"
        android:text="for your future!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/textViewEx"
       android:layout_marginTop="8dp"
       android:layout_marginLeft="46dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textViewFuture"
       android:textSize="14sp"
       android:textColor="#000000"
       android:fontFamily="@font/lato_light"
       android:text="Ex totam praesentium incidunt aut"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewTab"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEx"
        android:background="@drawable/shape_tab_onboarding_one"
        android:layout_width="38dp"
        android:layout_height="9dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5.5dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewTab"
        app:layout_constraintTop_toBottomOf="@+id/textViewEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <TextView
            android:background="@drawable/border_onbarding"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5.5dp"
        app:layout_constraintLeft_toRightOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/textViewEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <TextView
            android:background="@drawable/border_onbarding"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnGoToFragmentTwo"
        android:layout_marginRight="51dp"
        android:background="@drawable/background_text_onboarding"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEx"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/lato_black"
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>